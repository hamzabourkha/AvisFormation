@model List<AvisFormations.Data.Formation>
@{
    ViewBag.Title = "RechercheFormations";
}

<h2>Recherche de Formations</h2>
<table id="listFormations" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Url</th>
            <th>Nom SEO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var formation in @Model)
        {
            <tr>
                <td>@formation.Nom</td>
                <td>@formation.Description</td>
                <td>@formation.Url</td>
                <td>@formation.NomSeo</td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#listFormations').DataTable();
        });
    </script>
    }

